ยน
public class Triangle
{
	    int base;
	    int perpendicular;
            Triangle()
            {
             base=5;
             perpendicular=10;
             }
	    
	    Triangle(int bas, int perp)
	    {
	    	base= bas;
	    	perpendicular= perp;
	    }
	    int Area()
	    {
	    	return(base*perpendicular)/2;
	    }
      
            public static void main(String[]args)
            {
             Triangle t=new Triangle(7,9);
            system.out.println("Area="t.area());
            }
}
	     	
	
